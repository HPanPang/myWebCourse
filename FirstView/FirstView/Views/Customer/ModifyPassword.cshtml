@{
    Layout = "_CustomerLayout";
    ViewData["Title"] = "密码修改";
    var customer = Model;
    ViewData["Name"] = customer.Name;
}

<div class="container">
    <div class="col-md-3 "> </div>
    <div class="col-md-8 ">
        <div class="panel-body">
            <div class="col-md-8">
                
                <form method="post" name="modify" action='@Url.Action("ModifyPd")' onsubmit="return check();">
                    <div class="form-group">
                        <br />
                        <label class="form-control" name="cid" id="cid" type="text">@customer.Cid</label>
                    </div>
                    <div class="form-group">
                        <br />
                        <input class="form-control" name="oldpassword" id="oldpassword" type="password" placeholder="输入旧密码" required>
                    </div>
                    <div class="form-group">
                        <br />
                        <input class="form-control" name="newpasswordone" id="newpasswordone" type="password" placeholder="输入新密码" required>
                    </div>
                    <input value="提交修改" type="submit" class="btn btn-danger" />
                </form>
            </div>
        </div>
    </div>
</div>


       

