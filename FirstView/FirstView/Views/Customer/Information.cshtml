@{
    Layout = "_CustomerLayout";
    ViewData["Title"] = "个人信息";
    var customer = Model;
    ViewData["Name"] = customer.Name;
}
        <div class="container">
            <div class="col-md-2 "> </div>
            <div class="col-md-10 ">
                <div class="panel-body">
                    <div class="col-md-10">
                        <form role="form" action='@Url.Action("ModifyJudge")' method="post">
                            <div class="form-group">
                                <label>姓名</label>
                                <input class="form-control" name="name" id="name" type="text" value="@customer.Name">
                            </div>
                            <div class="form-group">
                                <label>性别</label>
                                <input class="form-control" name="sex" id="sex" type="text" value="@customer.Sex">
                            </div>
                            <div class="form-group">
                                <label>年龄</label>
                                <input class="form-control" name="age" id="age" type="text" value="@customer.Age">
                            </div>
                            <div class="form-group">
                                <label>联系方式</label>
                                <input class="form-control" name="number" id="number" type="text"value="@customer.Phone">
                            </div>
                            <div class="form-group">
                                <label>E-Mail</label>
                                <input class="form-control" name="email" id="eamil" type="text"value="@customer.Mail">
                            </div>
                            <div class="form-group">
                                <label>地址</label>
                                <input class="form-control" name="address" id="address" type="text"value="@customer.Address" >
                            </div>
                            <button type="submit" class="btn btn-info">保存修改</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>


