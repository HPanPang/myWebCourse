@{
    Layout = "_AuthorLayout";
    ViewData["Title"] = "个人信息";
    var author = Model;
    ViewData["Name"] = author.Name;
}

<div class="row">
    <div class="col-lg-12 responsive-md-100">
        <div class="card card-outline-primary">
            <div class="card-header">
                <h4 class="m-b-0 text-white">个人信息</h4>
            </div>
            <div class="card-body">
                <form>
                    <div class="form-body">
                        <h3 class="box-title m-t-15">作家基本信息</h3>
                        <hr class="m-t-0 m-b-40">
                        <div class="row p-t-20">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="control-label">姓名</label>
                                    <span type="text" id="name" class="form-control form-control-label">@author.Name</span>
                                </div>
                            </div>
                            <!--/span-->
                            <div class="col-md-6">
                                <div class="form-group has-danger">
                                    <label class="control-label">ID</label>
                                    <span type="text" id="id" class="form-control form-control-danger">@author.Id</span>
                                </div>
                            </div>
                            
                            <!--/span-->
                        </div>
                        <h3 class="box-title">其他信息</h3>
                        <hr class="m-t-0 m-b-40">
                        <!--/row-->

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group has-danger">
                                    <label class="control-label">联系电话</label>
                                    <span type="text" id="phone" class="form-control form-control-danger">@author.Phone</span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group has-danger">
                                    <label class="control-label">联系地址</label>
                                    <span type="text" id="address" class="form-control form-control-danger">@author.Address</span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group has-danger">
                                    <label class="control-label">是否签订合同</label>
                                    @{
                                        if (author.IsContact == "1")
                                        {
                                            <span type="text" id="isContact" class="form-control form-control-danger">是</span>
                                        }

                                        if (author.IsContact == "0")
                                        {
                                            <span type="text" id="isContact" class="form-control form-control-danger">否</span>
                                        }
                                                
                                    }

                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>